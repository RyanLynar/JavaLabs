<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ryan.javalabs.WeatherActivity">

    <ProgressBar
        android:id="@+id/wProgBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="380dp"
        android:minWidth="200dp"
        android:minHeight="200dp"
        app:layout_constraintTop_toBottomOf="@id/wProgBar"/>

    <TextView
        android:id="@+id/cTemp"

        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintLeft_toRightOf="@id/textView"
        />

    <TextView
        android:id="@+id/minTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/cTemp"
        app:layout_constraintLeft_toRightOf="@id/textView2"
         />

    <TextView
        android:id="@+id/maxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/minTemp"
        app:layout_constraintLeft_toRightOf="@id/textView3"
     />

    <TextView
        android:id="@+id/windSpd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@id/maxTemp"
        app:layout_constraintLeft_toRightOf="@id/textView4"/>

    <TextView
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Temperature :"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"


        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Max Temp:" />

    <TextView
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum Temp:"
        app:layout_constraintTop_toBottomOf="@id/textView2"

        />

    <TextView
        android:textSize="20dp"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        android:text="Wind Speed :" />
</android.support.constraint.ConstraintLayout>
